# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false  # マークダウンは意図的な空白を保持したい場合あり

# YAML / JSON
[*.{yml,yaml,json}]
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
